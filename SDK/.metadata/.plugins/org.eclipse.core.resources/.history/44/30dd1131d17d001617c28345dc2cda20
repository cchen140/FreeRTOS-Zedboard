#define	LINE_OF_APP_ARRAY			SIZE_OF_APP_ARRAY*4/32
#define APP_TASK_LOWEST_PRIORITY	tskIDLE_PRIORITY + 2	// Low hacker task has (tskIDLE_PRIORITY+1) priority.
#define APP_TASK_STACK_SIZE			100

