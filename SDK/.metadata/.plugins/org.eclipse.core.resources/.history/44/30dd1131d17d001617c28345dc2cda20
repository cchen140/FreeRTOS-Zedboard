/* Define for APP2 task. */
#define	APP2_TASK_PRIORITY			tskIDLE_PRIORITY + 3	// Bigger number means higher priority.
#define	APP2_TASK_DELAY_TIME_MS		( 20/portTICK_RATE_MS )
#define APP2_TASK_STACK_SIZE			1024

/* Define for APP3 task. */
#define	APP3_TASK_PRIORITY			tskIDLE_PRIORITY + 4	// Bigger number means higher priority.
#define	APP3_TASK_DELAY_TIME_MS		( 10/portTICK_RATE_MS )
#define APP3_TASK_STACK_SIZE			1024


typedef struct TaskParam {
	u32 periodUs;
	u32 priority;
	u32 computationTimeUs;
	u32 computeSize;
}TaskParam;

